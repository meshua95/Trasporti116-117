<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import java.lang.Double?>
<?import javafx.geometry.Insets?>
<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.FXMLController">
    <fx:define>
        <Double fx:id="buttonWidth" fx:value="220"/>
        <Double fx:id="defaultMargin" fx:value="10"/>
    </fx:define>

<BorderPane>

    <left>

        <VBox alignment="CENTER_LEFT" spacing="10">
            <BorderPane.margin>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </BorderPane.margin>
            <Button fx:id="addAmbulanza" text="Aggiungi Ambulanza" minWidth="$buttonWidth" maxWidth="$buttonWidth" prefWidth="$buttonWidth"/>
            <Button fx:id="addPaziente" text="Aggiungi Paziente" minWidth="$buttonWidth" maxWidth="$buttonWidth" prefWidth="$buttonWidth"/>
            <Button fx:id="addOperatore" text="Aggiungi operatore" minWidth="$buttonWidth" maxWidth="$buttonWidth" prefWidth="$buttonWidth"/>
            <Button fx:id="addTrasporto" text="Aggiungi trasporto" minWidth="$buttonWidth" maxWidth="$buttonWidth" prefWidth="$buttonWidth"/>
        </VBox>
    </left>

    <center>
        <VBox alignment="CENTER" spacing="10">
            <Button fx:id="rmAmbulanza" text="Rimuovi Ambulanza" minWidth="$buttonWidth" maxWidth="$buttonWidth" prefWidth="$buttonWidth"/>
            <Button fx:id="rmPaziente" text="Rimuovi Paziente" minWidth="$buttonWidth" maxWidth="$buttonWidth" prefWidth="$buttonWidth"/>
            <Button fx:id="rmOperatore" text="Rimuovi operatore" minWidth="$buttonWidth" maxWidth="$buttonWidth" prefWidth="$buttonWidth"/>
            <Button fx:id="rmTrasporto" text="Rimuovi trasporto" minWidth="$buttonWidth" maxWidth="$buttonWidth" prefWidth="$buttonWidth"/>
        </VBox>
    </center>

    <right>
        <VBox alignment="CENTER_LEFT" spacing="10">
            <BorderPane.margin>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </BorderPane.margin>
            <Button fx:id="trackAmbulanza" text="Traccia Ambulanza" minWidth="$buttonWidth" maxWidth="$buttonWidth" prefWidth="$buttonWidth"/>
            <Button fx:id="viewTrasporti" text="Visualizza Trasporti in corso" minWidth="$buttonWidth" maxWidth="$buttonWidth" prefWidth="$buttonWidth"/>
        </VBox>
    </right>
</BorderPane>


</StackPane>