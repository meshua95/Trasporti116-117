<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.BorderPane?>
<?import java.lang.Double?>
<?import javafx.geometry.Insets?>
<StackPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="viewCallCenter.RootControllerCallCenter">
    <fx:define>
        <Double fx:id="buttonWidth" fx:value="220"/>
        <Double fx:id="defaultMargin" fx:value="10"/>
    </fx:define>

<BorderPane>

    <left>

        <VBox alignment="CENTER_LEFT" spacing="10">
            <BorderPane.margin>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </BorderPane.margin>
            <Button fx:id="addAmbulance" text="Aggiungi Ambulanza" minWidth="$buttonWidth" maxWidth="$buttonWidth" prefWidth="$buttonWidth"/>
            <Button fx:id="addPatient" text="Aggiungi Paziente" minWidth="$buttonWidth" maxWidth="$buttonWidth" prefWidth="$buttonWidth"/>
            <Button fx:id="addOperator" text="Aggiungi Operatore" minWidth="$buttonWidth" maxWidth="$buttonWidth" prefWidth="$buttonWidth"/>
            <Button fx:id="addServiceRequest" text="Apri richiesta di Servizio" minWidth="$buttonWidth" maxWidth="$buttonWidth" prefWidth="$buttonWidth"/>
            <Button fx:id="addInfoRequest" text="Apri richiesta di Informazioni" minWidth="$buttonWidth" maxWidth="$buttonWidth" prefWidth="$buttonWidth"/>
        </VBox>
    </left>

    <center>
        <VBox alignment="CENTER" spacing="10">
            <Button fx:id="rmAmbulance" text="Rimuovi Ambulanza" minWidth="$buttonWidth" maxWidth="$buttonWidth" prefWidth="$buttonWidth"/>
            <Button fx:id="rmBooking" text="Rimuovi Prenotazione" minWidth="$buttonWidth" maxWidth="$buttonWidth" prefWidth="$buttonWidth"/>
        </VBox>
    </center>

    <right>
        <VBox alignment="CENTER_LEFT" spacing="10">
            <BorderPane.margin>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </BorderPane.margin>
            <Button fx:id="trackAmbulance" text="Traccia Ambulanza" minWidth="$buttonWidth" maxWidth="$buttonWidth" prefWidth="$buttonWidth"/>
            <Button fx:id="viewTransport" text="Visualizza Trasporti in corso" minWidth="$buttonWidth" maxWidth="$buttonWidth" prefWidth="$buttonWidth"/>
        </VBox>
    </right>
</BorderPane>


</StackPane>